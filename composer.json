{
  "name": "behzadsp/php-raid",
  "description": "RAID (redundant array of disks) calculation utility.",
  "type": "library",
  "homepage": "https://github.com/behzadsp/php-raid",
  "license": "MIT",
  "support": {
    "issues": "https://github.com/behzadsp/php-raid/issues",
    "wiki": "https://github.com/behzadsp/php-raid/wiki"
  },
  "require": {
    "php": ">= 7.0",
    "cakephp/i18n": "^3.4",
    "cakephp/utility": "^3.4",
    "squizlabs/php_codesniffer": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "^6.0",
    "cakephp/cakephp-codesniffer": "dev-master"
  },
  "autoload": {
    "psr-4": {
      "kevinquinnyo\\Raid\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "kevinquinnyo\\Raid\\Test\\": "tests"
    }
  },
  "scripts": {
    "cs": "phpcs --colors -p --standard=phpcs.xml.dist",
    "cs-fix": "phpcbf --colors --standard=phpcs.xml.dist",
    "test": "phpunit --colors=always --configuration phpunit.xml.dist"
  },
  "config": {
    "sort-packages": true
  }
}
